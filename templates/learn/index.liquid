      <script>
        $(function () {
          var $form = $(".scholarship-subscription-form");
          $form.find("#subscribe-all").on("click", function() {
            var $this = $(this);
            if ($this.is(":checked")) {
              $form.find("input[type='checkbox']").not("#subscribe-all").prop('checked', true);
            } else {
              $form.find("input[type='checkbox']").not("#subscribe-all").prop('checked', false);
            }
          });
          $form.submit(function (e) {
            var $form = $(this);
            $.getJSON(this.action + "?callback=?&cm-f-mthdyk=yes", $form.serialize(), function (data) {
              if (data.Status === 400) {
                $form.find('.error').remove();
                $form.append("<label class='error'>" + data.Message + "</label>");
              } else { // 200
                wng.googleAnalytics.trackEvent('Content', 'Join Scholarships List');
                $form.html("<label class='success'>" + data.Message + "</label>");
              }
            });
            e.preventDefault();
          });
        });
      </script>
    </div>
